model Notification {
  id            String       @id @default(uuid())
  userId        String
  auctionId     String
  type          NotificationType
  message       String
  createdAt     DateTime  @default(now())
  read          Boolean   @default(false)

  user          User      @relation(fields: [userId], references: [id])
}

enum NotificationType {
  AUCTION_ACCEPTED
  AUCTION_REJECTED
  AUCTION_ENDED
  YOU_ARE_WINNER
}